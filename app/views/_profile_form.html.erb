<form action="<%= path %>/<%=current_user.id%>" method="POST" >
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    
    이름 : <input type="text" name="name" required="true"><br/><br/>
    
    성별 :  <input type="radio" name="sex" value="male"> 남자
            <input type="radio" name="sex" value="female"> 여자<br><br>
            
            나이 :  <input type = "number" min = "20" max = "100" step = "1" name = "age"><br/><br/>
    
    연애상태 : <select name="status">
               <option value="solo">솔로</option>
               <option value="couple">연애중</option>
               <option value="merried">유부</option>
               </select><br/><br/>
    
    프로필 사진<br/><br/>
    
    거주지: <select name="home">
            <option value="서울">서울</option>
            <option value="경기남부">경기남부</option>
            <option value="경기북부">경기북부</option>
            <option value="인부천">인천/부천</option>
            <option value="강원도">강원도</option>
            <option value="경상남도">경상남도</option>
            <option value="경상북도">경상북도</option>
            <option value="전라남도">전라남도</option>
            <option value="전라북도">전라북도</option>
            <option value="충청남도">충청남도</option>
            <option value="충청북도">충청북도</option>
            <option value="제주도">제주도</option>
            <option value="기타">기타</option>
            </select><br/><br/>
    
    직업: <input type="text" name="job"><br/><br/>
    
    직장명: <input type="text" name="workplace"><br/><br/>
    
    키(cm): <input type="text" name="height"><br/><br/>
    
    간단소개 : <br/><textarea name = "comment" cols = "50" rows = "5"  placeholder="간단한 자기소개 입력"></textarea><br/><br/>
    
    연락처 : <input type="text" name="phone"><br/><br/><br/>
    
    흡연여부 : <input type="radio" name="smoking" value="smoker"> 흡연
               <input type="radio" name="smoking" value="nonsmoker">비흡연<br><br>
    
    음주정도 : 안먹음 <input type = "range" min = "0" max = "100" step = "10" name = "drink"> 술은"럽" <br/><br/>
    
    종교 :  <select name="religion">
            <option value="기독교">기독교</option>
            <option value="불교">불교</option>
            <option value="천주교">천주교</option>
            <option value="기타">기타</option>
            <option value="무교">무교</option>
            </select><br/><br/>
    
    연애관 : 보수적 <input type = "range" min = "0" max = "100" step = "10" name = "mind"> 자유로움 <br/><br/>
    
    
    <button type="submit">등록</button> 
</form>
